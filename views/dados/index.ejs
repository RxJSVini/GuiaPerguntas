<%- include('../partials/header.ejs') %>
<body>
  <%- include('../partials/navbar.ejs') %>

  <hr>
  <div class="container">
    <hr>
    <h1> Perguntas </h1>
    <a href="/pergunta" class="btn btn-primary">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= pergunta.titulo %></p>
        </div>
        <div class="card-footer">
          <a href="/perguntas/<%=pergunta.id%>"><button class="btn btn-primary">Responder</button></a>
        </div>
      </div>
    <% })%>
  </div>
</body>

<%- include('../partials/footer.ejs') %>
